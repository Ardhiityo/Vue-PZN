{
    "openapi": "3.0.3",
    "info": {
        "title": "User Api",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "https://api.server.test/v1"
        }
    ],
    "paths": {
        "/api/users": {
            "post": {
                "summary": "User register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "name",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "password_confirmation": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "John doe": {
                                    "value": {
                                        "username": "johndoe",
                                        "name": "John Doe",
                                        "password": "password123",
                                        "password_confirmation": "password123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success create user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                },
                                "examples": {
                                    "Success": {
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "username": "johndoe",
                                                "name": "John Doe"
                                            },
                                            "errors": {}
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "properties": {
                                                "username": {
                                                    "type": "array"
                                                },
                                                "name": {
                                                    "type": "array"
                                                },
                                                "password": {
                                                    "type": "array"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "Validation error": {
                                        "value": {
                                            "username": [
                                                "The username field is required.",
                                                "The username field min 8 characters."
                                            ],
                                            "name": [
                                                "The name field is required.",
                                                "The name field min 8 characters."
                                            ],
                                            "password": [
                                                "The password field is required.",
                                                "The password field min 8 characters."
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
